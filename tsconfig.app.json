{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "dist",
    "src/components/forecasts/ForecastChartView.tsx"
  ]
}
