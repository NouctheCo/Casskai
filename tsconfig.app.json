{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "strictNullChecks": false
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "node_modules", "dist"]
}
